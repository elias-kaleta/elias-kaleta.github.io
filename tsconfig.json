{
  "compilerOptions": {
    "types": ["vite/client"],
    "target": "es2020", 
    "jsx": "react",
    "module": "ES2020",
    "outDir": "./dist",
    "moduleResolution": "Bundler", 
    "noEmit": true,
    "isolatedModules": true, 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": ["client/**/*.ts", "client/**/*.tsx"],
  "exclude": ["node_modules"]
}